    <script>
        // فتح المواقع الاجتماعية
        function openSocialMedia(platform) {
            const urls = {
                'youtube': 'https://www.youtube.com/@alfarahidi_pov',
                'instagram': 'https://www.instagram.com/alfarahidi.pov/',
                'facebook': 'https://www.facebook.com/alfarahidi.pov',
                'tiktok': 'https://www.tiktok.com/@alfarahidi.pov'
            };
            
            if (urls[platform]) {
                window.open(urls[platform], '_blank');
            }
        }

        // فتح فيديو يوتيوب في نافذة جديدة
        function openYouTubeVideo(videoId) {
            const url = `https://www.youtube.com/@alfarahidi_pov`;
            window.open(url, '_blank');
        }

        // تأثيرات تفاعلية
        document.querySelectorAll('.video-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // تأثير النقر على بطاقة الفيديو
        document.querySelectorAll('.video-card').forEach(card => {
            const thumbnail = card.querySelector('.video-thumbnail');
            const youtubeLink = card.querySelector('.youtube-link');
            
            if (youtubeLink) {
                card.addEventListener('click', function(e) {
                    if (e.target !== youtubeLink && !youtubeLink.contains(e.target)) {
                        youtubeLink.click();
                    }
                });
            }
        });
    </script>
